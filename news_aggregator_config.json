{
    "CORPORA": {
        "APP": "mongo",
        "DB": "german_news",
        "COLLECTION": "publications",
        "USE": ["title", "text", "keywords"]
    },
    "PREPROCESSING": {
        "REMOVE_STOPWORDS": "nltk",
        "STEMMING": "nltk",
        "LEMMATIZATION": null
    },
    "TEXT_REPRESENTATION": {
        "REPRESENTATION": "word2vec",
        "MODELS_PATH":"models",
        "MODEL":"cc.de.300.vec"
    },
    "NER": {
        "MODEL_NAME": "spacy",
        "USE": ["title", "text", "keywords"]
    },
    "TDT":{
        "MODEL_NAME": "lda_tfidf_300",
        "MODELS_PATH": "models",
        "USE": ["text"],
        "METHOD": "lda",
        "REPRESENTATION": "tfidf",
        "NUM_OF_TOPICS": 1000,
        "SHOW_TOPN_TOPICS": 3
    },
    "KEYPHRASES":{
        "MODEL_NAME": "rake",
        "USE":["text"],
        "NUM_OF_PHRASES": 5
    },
    "SENTIMENT_ANALYSIS":{
        "MODEL_NAME": "blob",
        "USE": ["text"]
    },
    "CLUSTERING": {
        "MODEL_NAME": "aclust",
        "USE": ["title"],
        "SIMILARITY_MEASURE": "cosine",
        "THRESHOLD": 0.5,
        "TIME_RANGE": 3,
        "MODEL_PARAM": {
          "MODEL": "aclust",
          "MAX_DIST": 400
      }
    },
    "TEXT_SUMMARIZATION":
    {
        "MODEL_NAME": "textrank",
        "NUM_OF_SENTENCES": 5
    }
}
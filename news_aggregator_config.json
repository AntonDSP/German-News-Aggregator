{
    "CORPORA": {
        "APP": "mongo",
        "DB": "german_news",
        "COLLECTION": "german_news",
        "USE": ["title", "description", "text"]
    },
    "PREPROCESSING": {
        "REMOVE_STOPWORDS": "nltk",
        "STEMMING": null,
        "LEMMATIZATION": null
    },
    "NER": {
        "MODEL_NAME": "spacy",
        "USE": ["title", "description", "text"]
    },
    "TDT":{
        "MODEL_NAME": "lda_doc2bow",
        "USE": ["text"],
        "REPRESENTATION": "doc2bow",
        "MODEL_PARAM": {
          "MODEL": "lda",
          "NUM_OF_TOPICS":200
        }
    },
    "CLUSTERING": {
        "MODEL_NAME": "k_means_minibatch",
        "USE": ["topics"],
        "MODEL_PARAM": {
          "MODEL": "k_means_minibatch",
          "NUM_OF_CLUSTERS": 100
      }
    }
}
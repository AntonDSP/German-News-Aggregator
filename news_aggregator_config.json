{
    "CORPORA": {
        "APP": "mongo",
        "DB": "german_news",
        "COLLECTION": "publications",
        "USE": ["title", "text", "keywords"]
    },
    "PREPROCESSING": {
        "REMOVE_STOPWORDS": "nltk",
        "STEMMING": "nltk",
        "LEMMATIZATION": null
    },
    "NER": {
        "MODEL_NAME": "spacy",
        "USE": ["title", "text", "keywords"]
    },
    "TDT":{
        "MODEL_NAME": "cc.de.300.vec",
        "USE": ["text"],
        "REPRESENTATION": "word2vec",
        "MODEL_PARAM": {
          "MODEL": "",
          "NUM_OF_TOPICS":""
        }
    },
    "CLUSTERING": {
        "MODEL_NAME": "aclust",
        "USE": ["topics"],
        "SIMILARITY_MEASURE": "cosine",
        "THRESHOLD": 0.5,
        "MODEL_PARAM": {
          "MODEL": "aclust",
          "MAX_DIST": 400
      }
    }
}